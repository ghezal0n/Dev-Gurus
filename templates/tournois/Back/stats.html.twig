{% extends 'baseBack.html.twig' %}

{% block title %}  tourists {% endblock %}

{% block body %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

    <style>
        .statsofusers {
            margin-left: 18vw  ;
        }

        .canvas-container {
            display: flex;
            width: 40%;
        }

        .cv {
            width: 100%;
            height: 100%;
        }

    </style>


  

    <div class="canvas-container mt-5 mb-5" style="height:40vh; width:40vw">
       
        <canvas id="chartdate"></canvas>
    </div>



    <script>



        // chart date
        var ctx = document.getElementById('chartdate');
        var data = {
            datasets: [{
                data:  {{ statDate|json_encode }}  ,
                backgroundColor: [
                    '#b7c7b7',
                ]
            }
            ],

            // These labels appear in the legend and in the tooltips when hovering different arcs
            labels: [
                'January',
                'February',
                'March',
                'April',
                'May',
                'June',
                'July',
                'August',
                'September',
                'October',
                'November',
                'December'
            ]
        };

        var myLineChart = new Chart(ctx, {
            type: 'line',
            data: data,
            options: {
                scales: {
                    yAxes: [{
                        stacked: true
                    }]
                },
                title: {
                    display: true,
                    text: 'New Tournement per month'
                }
            }
        });




    </script>

{% endblock %}