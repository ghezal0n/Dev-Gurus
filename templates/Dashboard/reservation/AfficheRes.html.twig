                    <td>Edit</td>
                    <td>Ajouter</td>
                    <td>Supprimer</td>
                  </tr>
                </thead>
              {% for c in listReservation %}
                  <tr>

                    <td>{{c.id}}</td>
                    <td>{{ c.Guide.titre }}</td>
                    <td>{{ c.idjoueur.nom }}</td>
                    <td>{{ c.idCoach.nom }}</td>
                    <td>{{ c.HeureDebut }}</td>
                    <td>{{ c.dateRes|date("m/d/Y")  }}</td>


                    <td><a href="{{ path('ReservationModif',{'id':c.id}) }}">Modifier</a></td>
                   <td><a href="{{ path('ReservationAdd') }}">Ajouter</a></td>
                    <td><a href="{{ path("SupprimerReservation",{"id":c.id}) }}">supprimer</a></td>

                  </tr>
