{% block content %}
 <div class="templatemo-content-container">
          <div class="templatemo-content-widget no-padding">
            <div class="panel panel-default table-responsive">

              <table class="table table-striped table-bordered templatemo-user-table">
                <tbody>
                  <thead>
                  <tr>
                    <td><a  class="white-text templatemo-sort-by">Id Reservation <span class="caret"></span></a></td>
                    <td><a  class="white-text templatemo-sort-by">Titre Guide Reservé <span class="caret"></span></a></td>
                    <td><a  class="white-text templatemo-sort-by"> Joueur <span class="caret"></span></a></td>
                    <td><a  class="white-text templatemo-sort-by">coach <span class="caret"></span></a></td>
