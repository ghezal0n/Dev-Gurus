{% extends 'base2.html.twig' %}
{% block content %}
<div class="templatemo-content-container">
          <div class="templatemo-content-widget white-bg">
            <h2 class="margin-bottom-10">Ajouter un Service Guide </h2>
            <p> Â </p> 
            {{form_start (formService)}}
            <div class="templatemo-login-form" method="post" enctype="multipart/form-data">
              <div class="row form-group">
                <div class="col-lg-6 col-md-6 form-group">                  
                    <label for="inputFirstName">Title</label>
                    <input type="text" class="form-control" id="id_fourni" placeholder="001"{{ form_widget(formService.titre) }}                  
                </div>
                <div class="col-lg-6 col-md-6 form-group">                  
                    <label for="inputLastName">Small Description</label>
                    <input type="text" class="form-control" rows="6" id="nom" placeholder="This Service will Guide u and help u to ... "{{ form_widget(formService.descrp)}}>                  
                </div> 
                <div class="col-lg-6 col-md-6 form-group">                  
                  <label for="inputLastName">Nombre heure</label>
                  <input type="text" class="form-control" id="num_tel" placeholder="99100777"{{ form_widget(formService.NbHeure) }}                  
              </div>
              <div class="row form-group">
                <div class="col-lg-6 col-md-6 form-group">                  
                    <label for="inputEmail">Prix</label>
                    <input type="number" class="form-control"placeholder="20 DT/H"{{ form_widget(formService.prix) }}                  
                </div> 
              </div> 
              <div class="col-lg-6 col-md-6 form-group">                  
                    <label for="text">DateCreation</label>
                     <label for="dateCreation">DateCreation : {{"now"|date("m/d/Y")}} </label>
                    
                    <!--
                    <h3 class="form-control" id="date" {{form_widget(//formService.prix)|date("m/d/Y")}}       
                    -->     
                <div class="nk-gap-2"></div>
                </div>  

              <div class="row form-group">
                
              <div class="row form-group">
             
                <div class="col-lg-12">
                  <label class="control-label templatemo-block">File Input</label> 
                  <!-- <input type="file" name="fileToUpload" id="fileToUpload" class="margin-bottom-10"> -->
                  <input type="file" name="fileToUpload" id="fileToUpload" class="filestyle" data-buttonName="btn-primary" data-buttonBefore="true" data-icon="false">
                  <p>Maximum upload size is 5 MB.</p>                  
                </div>
              </div>

              <div class="form-group text-right">
                <button type ="submit"  class="templatemo-blue-button" >Save</button>
                <button type="reset" class="templatemo-white-button">Annuler</button>
              </div>                           
            </div>
          </div>
          </div>
        </div>
      </div>
      {{form_end(formService)}}
</div>
</div>
      {% endblock content %}