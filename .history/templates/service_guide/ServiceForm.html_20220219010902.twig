{% extends 'base.html.twig' %}

{% block content %}
{{ form_start(formService) }}

<div class="container">


<div class="class="nk-form"">

    

<div class="row align-items-center">
                <div class="col-lg-8">
                    <div class="row justify-content-lg-center">
                        <div class="col-lg-12">
                            <label for="fname">Title <span class="text-main-1">*</span>:</label>
                            <input type="text" class="form-control required"{{ form_widget(formService.titre) }}
                        </div>
                    
                    </div>
                    </div>
                    </div>
             <div class="nk-gap-1"></div>
                      <label for="email">Small Description <span class="text-main-1">*</span>:</label>
                         <textarea class="form-control" rows="6"{{ form_widget(formService.descrp)}}</textarea>

                             <div class="nk-gap-1"></div>
                             <div class="row vertical-gap">
                                         <div class="col-sm-6">
                                             <label for="email">Nombre heure <span class="text-main-1">*</span>:</label>
                                                 <input type="number" class="form-control valid" value="1" min="1" max="100" aria-invalid="false" {{ form_widget(formService.NbHeure) }}
                                <div class="nk-gap-2"></div>
                                              </div>
                                      <div class="col-sm-6">
                                             <label for="phone">Price <span class="text-main-1">*</span>:</label>
                                            <input type="number" class="form-control required"{{ form_widget(formService.prix) }}
                                    </div>
                                         <div class="nk-gap-2"></div>

                                          <div class="col-sm-6">
                                             <label for="phone">Date <span class="text-main-1">*</span>:</label>
                                            <input type="number" class="form-control required"{{ form_widget({% time = new DateTime();%}) }}
                                    </div>

                                                  <a class="nk-btn nk-btn-rounded nk-btn-color-main-1"  >
                                                  {{ form_widget(formService.Save) }}</a>
                                                  
    </div>
                    </div>
</div>
</div>
{{ form_end(formService) }}


{% endblock %}
